<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".DeveloperInfoActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:layout_goneMarginTop="25dp"

        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="开发者信息"
        app:titleTextColor="@android:color/white" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- 开发者头像 -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivDeveloperAvatar"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:src="@mipmap/ic_launcher_round"
                android:contentDescription="开发者头像"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full" />

            <!-- 开发者名字 -->
            <TextView
                android:id="@+id/tvDeveloperName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="IDlike"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:layout_marginBottom="8dp" />

            <!-- 开发者描述 -->
            <TextView
                android:id="@+id/tvDeveloperDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- 因 - 为 - 热 - 爱 -"
                android:textSize="16sp"
                android:textAlignment="center"
                android:alpha="0.7"
                android:layout_marginBottom="32dp" />

            <!-- 分隔线 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="32dp" />

            <!-- 项目信息 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="项目历程"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• 2025/7/25 - 项目的原型第一个版本发布"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• 2025/8/9 - 本项目作为原型的补丁正式发布"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• 2025/8/10 - 本项目正式独立，命名为kctrl"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• 2025/8/11 - 前身的功能迁移完毕"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• 2025/8/13 - 优化用户体验"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

            </LinearLayout>

            <!-- 联系信息 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系方式"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />



            <!-- 致谢 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="致谢"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="特别感谢："
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />
                
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="酷安@奶上这杯奶 (提供了挂载点识别方案)"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />
                
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="全体交流群友"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />
                
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="所有使用本应用并反馈问题的用户"
                android:textSize="16sp"
                android:layout_marginBottom="32dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="以及，您。"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />
            <!-- 最终显示的作者名字 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邮箱: idlike@example.com"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QQ群: 764576035"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GitHub: @txlweb"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>