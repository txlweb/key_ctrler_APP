<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:overScrollMode="always"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:focusable="true"
        android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/tvKeyTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="编辑按键配置"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="12dp" />

    <LinearLayout
        android:id="@+id/layoutClickScript"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="单击脚本"
            app:boxStrokeColor="?attr/colorPrimary"
            app:boxBackgroundColor="?attr/colorSurfaceContainer"
            app:hintTextColor="?attr/colorOnSurfaceVariant"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/etClickScript"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:completionHint="选择脚本文件" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/btnEditClick"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_edit"
            android:contentDescription="编辑单击脚本" />

        <ImageButton
            android:id="@+id/btnDeleteClick"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="2dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_delete"
            android:contentDescription="删除单击事件" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutDoubleClickScript"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="双击脚本"
            app:boxStrokeColor="?attr/colorPrimary"
            app:boxBackgroundColor="?attr/colorSurfaceContainer"
            app:hintTextColor="?attr/colorOnSurfaceVariant"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/etDoubleClickScript"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="双击脚本"
                android:inputType="none"
                android:completionHint="选择脚本文件" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/btnEditDoubleClick"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_edit"
            android:contentDescription="编辑双击脚本" />

        <ImageButton
            android:id="@+id/btnDeleteDoubleClick"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="2dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_delete"
            android:contentDescription="删除双击事件" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutShortPressScript"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="短按脚本"
            app:boxStrokeColor="?attr/colorPrimary"
            app:boxBackgroundColor="?attr/colorSurfaceContainer"
            app:hintTextColor="?attr/colorOnSurfaceVariant"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/etShortPressScript"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="短按脚本"
                android:inputType="none"
                android:completionHint="选择脚本文件" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/btnEditShortPress"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_edit"
            android:contentDescription="编辑短按脚本" />

        <ImageButton
            android:id="@+id/btnDeleteShortPress"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="2dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_delete"
            android:contentDescription="删除短按事件" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutLongPressScript"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="长按脚本"
            app:boxStrokeColor="?attr/colorPrimary"
            app:boxBackgroundColor="?attr/colorSurfaceContainer"
            app:hintTextColor="?attr/colorOnSurfaceVariant"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/etLongPressScript"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="长按脚本"
                android:inputType="none"
                android:completionHint="选择脚本文件" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/btnEditLongPress"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_edit"
            android:contentDescription="编辑长按脚本" />

        <ImageButton
            android:id="@+id/btnDeleteLongPress"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="2dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_delete"
            android:contentDescription="删除长按事件" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        android:text="添加事件"
        android:drawableStart="@drawable/ic_add"
        android:backgroundTint="?attr/colorSecondaryContainer"
        android:textColor="?attr/colorOnSecondaryContainer"
        style="@style/Widget.Material3.Button.UnelevatedButton" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_marginEnd="8dp"
            style="@style/Widget.Material3.Button.TextButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="?attr/colorOnPrimary"
            style="@style/Widget.Material3.Button" />
    </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>